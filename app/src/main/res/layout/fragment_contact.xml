<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="#ffffff"
      android:padding="10dp">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/wemap"
          android:textColor="#fa676e"
          android:textColorHighlight="#ffffff"
          android:textColorHint="#ffffff"
          android:textSize="15sp"
          android:layout_marginBottom="5dp"
          android:layout_marginTop="5dp" />
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:src="@drawable/contacts_map"
          android:contentDescription="@string/wemap" />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/our_address"
          android:textColor="#fa676e"
          android:textColorHighlight="#ffffff"
          android:textColorHint="#ffffff"
          android:textSize="15sp"
          android:layout_marginBottom="5dp"
          android:layout_marginTop="5dp" />
      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="0dp"
          android:drawableLeft="@drawable/icon_address"
          android:text="@string/address"
          android:drawablePadding="4dp"
          style="@style/Base.Widget.AppCompat.Button.Borderless"
          android:gravity="left|center_vertical"
          android:textStyle="normal|bold"
          android:allowUndo="false"
          android:layout_gravity="center"
          android:textSize="12sp"
          android:foregroundGravity="left"
          android:typeface="serif" />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/email"
          android:textColor="#fa676e"
          android:textColorHighlight="#ffffff"
          android:textColorHint="#ffffff"
          android:textSize="15sp"
          android:layout_marginBottom="5dp"
          android:layout_marginTop="5dp" />
      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="0dp"
          android:drawableLeft="@drawable/icon_email"
          android:text="@string/our_email1"
          android:drawablePadding="4dp"
          style="@style/Base.Widget.AppCompat.Button.Borderless"
          android:gravity="left|center_vertical"
          android:textStyle="normal|bold"
          android:allowUndo="false"
          android:layout_gravity="center"
          android:textSize="12sp"
          android:foregroundGravity="left"
          android:typeface="serif" />
      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="0dp"
          android:drawableLeft="@drawable/icon_email"
          android:text="@string/our_email2"
          style="@style/Base.Widget.AppCompat.Button.Borderless"
          android:drawablePadding="4dp"
          android:gravity="left|center_vertical"
          android:textStyle="normal|bold"
          android:allowUndo="false"
          android:layout_gravity="center"
          android:textSize="12sp"
          android:foregroundGravity="left"
          android:typeface="serif" />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/telephone"
          android:textColor="#fa676e"
          android:textColorHighlight="#ffffff"
          android:textColorHint="#ffffff"
          android:textSize="15sp"
          android:layout_marginBottom="5dp"
          android:layout_marginTop="5dp" />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/departmentclient"
          android:textColor="#000000"
          android:textColorHighlight="#ffffff"
          android:textColorHint="#ffffff"
          android:textSize="12sp"
          android:layout_marginBottom="5dp"
          android:layout_marginTop="5dp" />
      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="0dp"
          android:drawableLeft="@drawable/icon_phone1"
          android:text="@string/mobphone1"
          android:drawablePadding="4dp"
          style="@style/Base.Widget.AppCompat.Button.Borderless"
          android:gravity="left|center_vertical"
          android:textStyle="normal|bold"
          android:allowUndo="false"
          android:layout_gravity="center"
          android:textSize="12sp"
          android:foregroundGravity="left"
          android:typeface="serif" />
      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="0dp"
          android:drawableLeft="@drawable/icon_phone1"
          android:text="@string/mobphone2"
          android:drawablePadding="4dp"
          style="@style/Base.Widget.AppCompat.Button.Borderless"
          android:gravity="left|center_vertical"
          android:textStyle="normal|bold"
          android:allowUndo="false"
          android:layout_gravity="center"
          android:textSize="12sp"
          android:foregroundGravity="left"
          android:typeface="serif" />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/order"
          android:textColor="#000000"
          android:textColorHighlight="#ffffff"
          android:textColorHint="#ffffff"
          android:textSize="12sp"
          android:layout_marginBottom="5dp"
          android:layout_marginTop="5dp" />
      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="0dp"
          android:drawableLeft="@drawable/icon_phone2"
          android:text="@string/mobphone2"
          android:drawablePadding="4dp"
          style="@style/Base.Widget.AppCompat.Button.Borderless"
          android:gravity="left|center_vertical"
          android:textStyle="normal|bold"
          android:allowUndo="false"
          android:layout_gravity="center"
          android:textSize="12sp"
          android:foregroundGravity="left"
          android:typeface="serif" />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/develop"
          android:textColor="#fa676e"
          android:textColorHighlight="#ffffff"
          android:textColorHint="#ffffff"
          android:textSize="15sp"
          android:layout_marginBottom="5dp"
          android:layout_marginTop="5dp" />
      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="0dp"
          android:drawableLeft="@drawable/icon_phone2"
          android:text="@string/phone_dev"
          android:drawablePadding="4dp"
          style="@style/Base.Widget.AppCompat.Button.Borderless"
          android:gravity="left|center_vertical"
          android:textStyle="normal|bold"
          android:allowUndo="false"
          android:layout_gravity="center"
          android:textSize="12sp"
          android:foregroundGravity="left"
          android:typeface="serif" />
  </LinearLayout>
</ScrollView>