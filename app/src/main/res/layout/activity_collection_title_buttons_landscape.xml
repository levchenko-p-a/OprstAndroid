<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_nav_superior"
            android:layout_weight="0.2"
            android:layout_margin="0dp"
            android:padding="0dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_nav_projects"
            android:layout_weight="0.2"
            android:layout_margin="0dp"
            android:padding="0dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_nav_advertising"
            android:layout_weight="0.2"
            android:layout_margin="0dp"
            android:padding="0dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_nav_events"
            android:layout_weight="0.2"
            android:layout_margin="0dp"
            android:padding="0dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_nav_us"
            android:layout_weight="0.2"
            android:layout_margin="0dp"
            android:padding="0dp"
            />
</LinearLayout>