<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:background="#ffffff"
            android:contextClickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:foregroundGravity="center_vertical|center|center_horizontal"
            android:layout_gravity="center"
            android:gravity="center|center_horizontal"
            android:layout_weight="1">

            <com.tyaa.OPRST.ExtendedViews.RotatedTextView
                android:id="@+id/superior_video_grid_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/video_grid_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif"
                android:shadowColor="@android:color/darker_gray"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:layout_gravity="center"
                custom:rotation="-15"
                android:layout_weight="1.5"
                android:allowUndo="false"
                android:foregroundGravity="center_vertical|center|center_horizontal"
                android:layout_margin="0dp"
                android:textColor="#f94f4f"/>

            <com.tyaa.OPRST.ExtendedViews.RotatedTextView
                android:id="@+id/superior_photo_grid_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/photo_grid_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif"
                android:shadowColor="@android:color/darker_gray"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                custom:rotation="-15"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:allowUndo="false"
                android:foregroundGravity="center_vertical|center|center_horizontal"
                android:layout_margin="0dp"
                android:textColor="#f94f4f">
            </com.tyaa.OPRST.ExtendedViews.RotatedTextView>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/superior_video_view1"
                android:layout_span="6"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/superior_photo_view1"
                android:layout_span="6"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/superior_video_view2"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/superior_photo_view2"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/superior_video_view3"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/superior_photo_view3"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>